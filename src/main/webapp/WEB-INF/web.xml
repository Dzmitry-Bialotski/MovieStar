<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>MovieStar</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/error/error403.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/error404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error/error500.jsp</location>
    </error-page>
    -->

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/error.jsp</location>
    </error-page>
    <!--   FILTERS   -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.belotskiy.movie_star.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>by.belotskiy.movie_star.controller.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>PermissionFilter</filter-name>
        <filter-class>by.belotskiy.movie_star.controller.filter.PermissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PermissionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>ErrorMessageFilter</filter-name>
        <filter-class>by.belotskiy.movie_star.controller.filter.ErrorMessageFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ErrorMessageFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>by.belotskiy.movie_star.controller.filter.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ReturnUrlFilter</filter-name>
        <filter-class>by.belotskiy.movie_star.controller.filter.ReturnUrlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ReturnUrlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--   JSP   -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/WEB-INF/jsp/auth/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <jsp-file>/WEB-INF/jsp/auth/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/WEB-INF/jsp/home/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Error403</servlet-name>
        <jsp-file>/WEB-INF/jsp/error/error403.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Error403</servlet-name>
        <url-pattern>/no-permissions</url-pattern>
    </servlet-mapping>

    <!-- shared pages -->
    <servlet>
        <servlet-name>Header</servlet-name>
        <jsp-file>/WEB-INF/jsp/shared/header.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Header</servlet-name>
        <url-pattern>/navigation</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Style</servlet-name>
        <jsp-file>/WEB-INF/jsp/shared/style_import.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Style</servlet-name>
        <url-pattern>/import_css</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Script</servlet-name>
        <jsp-file>/WEB-INF/jsp/shared/scripts_import.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Script</servlet-name>
        <url-pattern>/import_js</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <jsp-file>/WEB-INF/jsp/home/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>180</session-timeout>
    </session-config>
</web-app>